<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TableRow>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/streamaxia_green"
                android:id="@+id/rtmp_demo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="RTMP Demo"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

        <TableRow>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/streamaxia_green"
                android:id="@+id/hls_demo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="HLS Demo"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

        <TableRow>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@color/streamaxia_green"
                android:id="@+id/dash_demo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="DASH Demo"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/streamaxia_logo_retina"/>
</RelativeLayout>